<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= data.title %> | Mabuwaya Foundation</title>
  <link rel="stylesheet" href="/css/engagement-support.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <!-- ===== NAVBAR ===== -->
  <header>
    <nav class="navbar">
      <h1 class="logo"><a href="/homepage"><%= data.siteName || "MABUWAYA FOUNDATION" %></a></h1>
      <ul class="nav-links" id="nav-links">
        <% (data.navLinks || []).forEach(link => { %>
          <li><a href="<%= link.href %>"><%= link.text %></a></li>
        <% }) %>
      </ul>

      <button class="menu-btn" id="menu-btn">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>
    </nav>
  </header>

  <!-- ===== GET INVOLVED SECTION ===== -->
  <section class="get-involved">
    <div class="container">
      <h2><%= data.section?.title %></h2>
      <p class="intro"><%= data.section?.intro %></p>

      <div class="involvement-options two-columns">
        <% (data.section?.options || []).forEach(option => { %>
          <div class="option-card">
            <i class="<%= option.icon %>"></i>
            <h3><%= option.title %></h3>
            <p><%= option.description %></p>
            <a href="<%= option.href %>" class="btn"><%= option.buttonText %></a>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- ===== FOOTER ===== -->
  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-box">
          <h3><%= data.footer?.office?.title %></h3>
          <p><%- data.footer?.office?.address?.replace(/<br\s*\/?>/g, ', ') %></p>
        </div>

        <div class="footer-box">
          <h3><%= data.footer?.phone?.title %></h3>
          <p><%= (data.footer?.phone?.numbers || []).join(', ') %></p>
        </div>

        <div class="footer-box">
          <h3><%= data.footer?.email?.title %></h3>
          <p><%= (data.footer?.email?.addresses || []).join(', ') %></p>
        </div>

        <div class="footer-box">
          <h3><%= data.footer?.social?.title %></h3>
          <div class="social-links">
            <% (data.footer?.social?.links || []).forEach(link => { %>
              <a href="<%= link.url %>" target="_blank">
                <i class="fab fa-<%= link.platform %>-square"></i>
              </a>
            <% }) %>
          </div>
        </div>
      </div>

      <p class="footer-bottom"><%= data.footer?.copyright || "Â© 2025 Mabuwaya Foundation. All rights reserved." %></p>
    </div>
  </footer>

  <!-- ===== MOBILE MENU ===== -->
  <script>
    document.getElementById('menu-btn').addEventListener('click', function() {
      document.getElementById('nav-links').classList.toggle('active');
    });
  </script>
</body>
</html>
